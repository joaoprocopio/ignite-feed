{
  "compilerOptions": {
    "lib": ["es2023"],
    "types": ["node"],
    "module": "ESNext",
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "composite": true
  },
  "include": ["./*.config.*"]
}
